{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe compilar archivo activo",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
                "-g",
                "-Wall",
                "-std=c11",
                "-pedantic-errors",
                "-Wno-switch",
                "-D_GNU_SOURCE",
                "*.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilador: C:\\MinGW\\bin\\gcc.exe"
		}
	]
}